generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  username  String   @unique
  name      String
  type      Int      @default(0)
  status    Int      @default(0)
  photo     Int
  email     String?
  unique    String?
  openid    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
